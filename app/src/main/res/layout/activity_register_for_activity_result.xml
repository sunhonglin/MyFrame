<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeActivity"
    android:paddingHorizontal="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_request_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/shape_corner_radius_4dp"
        android:backgroundTint="@color/colorAccent"
        android:text="RequestPermission"
        android:textColor="@color/color_white"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_request_multiple_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_corner_radius_4dp"
        android:backgroundTint="@color/colorAccent"
        android:text="RequestMultiplePermissions"
        android:textColor="@color/color_white"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_customer_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@drawable/shape_corner_radius_4dp"
        android:backgroundTint="@color/colorAccent"
        android:text="StartActivityForResult By Customer Contract"
        android:textColor="@color/color_white"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_default_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@drawable/shape_corner_radius_4dp"
        android:backgroundTint="@color/colorAccent"
        android:text="StartActivityForResult By Default Contract"
        android:textColor="@color/color_white"
        android:textSize="14sp" />
</LinearLayout>