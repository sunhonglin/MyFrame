<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--横向进度条-->
    <style name="AppUpdateHorizontalProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/shape_apk_download_progressbar</item>
    </style>

    <style name="AppUpdateDialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:background">@color/color_transparent</item>
        <item name="android:windowBackground">@color/color_transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
</resources>