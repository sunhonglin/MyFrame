<resources>
    <!-- skin attr define-->
    <attr name="app_skin_common_background" format="color|reference" />

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- actionbar color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- status bar color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_white</item>

        <item name="app_skin_common_background">#0000FF</item>
    </style>


    <style name="AppThemeNoActionBarCold" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- actionbar color -->
        <item name="colorPrimary">@color/colorPrimaryCold</item>
        <!-- status bar color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCold</item>
        <item name="colorAccent">@color/colorAccentCold</item>
        <item name="android:windowBackground">@color/colorAccentCold</item>

        <item name="app_skin_common_background">#00FF00</item>

    </style>

    <style name="AppThemeNoActionBarHeat" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- actionbar color -->
        <item name="colorPrimary">@color/colorPrimaryHeat</item>
        <!-- status bar color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHeat</item>
        <item name="colorAccent">@color/colorAccentHeat</item>
        <item name="android:windowBackground">@color/colorAccentHeat</item>

        <item name="app_skin_common_background">@color/colorAccentHeat</item>
    </style>
</resources>